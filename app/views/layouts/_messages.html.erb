<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <!-- <div class="alert alert-<%#= name == :notice ? "success" : "error" %>" role="alert"> -->
    <div class='alert alert-error span8'>
      <a class="close" data-dismiss="alert">&#215;</a>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>
