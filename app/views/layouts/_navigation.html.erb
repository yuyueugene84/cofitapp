<div class="navbar-header" id="navbrand">
   <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria controls="navbar">
    <span class="sr-only">Toggle Navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
  <%= link_to "CofitApp", root_path, :class => 'navbar-brand' %>
</div>

<div class="collapse navbar-collapse">

  <ul class="nav navbar-nav navbar-right">

<% if logged_in? %>

  <div class='btn-group nav_item'>
    <%= link_to('', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown') do %>
      <%= current_user.username %>
      <span class='caret'></span>
    <% end %>
    <ul class='dropdown-menu'>
      <li>
        <%= link_to edit_user_path(current_user) do %>
          <i class='icon-pencil'></i>
          edit profile
        <% end %>
      </li>
      <li>
        <%= link_to user_path(current_user) do %>
            <i class='icon-user'></i>
            view profile
          <% end %>
        </li>
        <li>
          <%= link_to logout_path do %>
            <i class='icon-circle-arrow-left'></i>
            logout
          <% end %>
        </li>
      </ul>
    </div>
  <% else # logged out%>
    <div class='nav_item'>
      <%= link_to 'Register', register_path, class: 'btn btn-success btn-large' %>
    </div>
    <div class='nav_item'>
      <%= link_to 'Log in', login_path, class: 'btn btn-danger btn-large' %>
    </div>
  <% end %>

  </ul>
</div>
