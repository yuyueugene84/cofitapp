<br>
<div class='well col-md-8'>

  <%= form_tag '/login' do %>
    <div class='form-group'>
      <%= label_tag :email %>
      <%= email_field_tag :email, params[:email] || '', class: "form-control" %>
    </div>
    <div class='form-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password] || '', class: "form-control" %>
    </div>
    <%= submit_tag 'Login', class: 'btn btn-success' %>
  <% end %>
</div>
