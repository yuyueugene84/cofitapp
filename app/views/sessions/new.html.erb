<%= render '/shared/content_title', title: 'Log In'%>
<hr>

<div class="col-md-6 well">

  <%= form_tag '/login' do %>
    <div class='form-group' ng-class="{ 'has-error':LoginForm['user[email]'].$invalid }">
      <%= label_tag :email %>
      <%= email_field_tag :email, params[:email] || '', class: "form-control" %>
    </div>
    <div class='form-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password] || '', class: "form-control" %>
    </div>
    <%= submit_tag 'Login', class: 'btn btn-primary' %>
  <% end %>
</div>
